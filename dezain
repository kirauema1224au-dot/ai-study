    <script>
        // ãƒšãƒ¼ã‚¸é·ç§»é–¢æ•°
        function nav(pageId) {
            // ã™ã¹ã¦ã®ãƒšãƒ¼ã‚¸ã‚’éš ã™
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });

            // å¯¾è±¡ã®ãƒšãƒ¼ã‚¸ã‚’è¡¨ç¤º
            const targetPage = document.getElementById('p-' + pageId);
            if (targetPage) {
                targetPage.classList.add('active');
            }

            // ãƒŠãƒ“ãƒªãƒ³ã‚¯ã®ã‚¢ã‚¯ãƒ†ã‚£ãƒ–çŠ¶æ…‹ã‚’æ›´æ–°
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            const targetLink = document.getElementById('l-' + pageId);
            if (targetLink) {
                targetLink.classList.add('active');
            }

            // ã‚¹ãƒ ãƒ¼ã‚ºãªãƒˆãƒƒãƒ—ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // ãƒ¢ãƒã‚¤ãƒ«ç­‰ã§ã®ãƒãƒƒã‚·ãƒ¥é·ç§»å¯¾å¿œ
        window.addEventListener('hashchange', () => {
            const hash = window.location.hash.replace('#', '');
            if (hash) nav(hash);
        });

        // èª­ã¿è¾¼ã¿æ™‚ã«ãƒãƒƒã‚·ãƒ¥ãŒã‚ã‚Œã°é·ç§»
        window.onload = () => {
            const hash = window.location.hash.replace('#', '');
            if (hash) nav(hash);
        };

        // AIãƒœã‚¿ãƒ³ã®ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°æ¼”å‡º
        const genBtn = document.querySelector('.btn-premium');
        if (genBtn) {
            genBtn.onclick = function () {
                const originalContent = this.innerHTML;
                this.innerHTML = `<svg class="animate-spin h-6 w-6 text-white" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg><span class="ml-3">ç”Ÿæˆã‚¨ãƒ³ã‚¸ãƒ³èµ·å‹•ä¸­...</span>`;
                this.style.pointerEvents = 'none';

                setTimeout(() => {
                    this.innerHTML = `<span>ğŸ‰ ç”ŸæˆãŒå®Œäº†ã—ã¾ã—ãŸï¼</span>`;
                    this.style.background = 'linear-gradient(135deg, #10b981 0%, #3b82f6 100%)';
                    setTimeout(() => {
                        this.innerHTML = originalContent;
                        this.style.background = '';
                        this.style.pointerEvents = 'all';
                    }, 3000);
                }, 2500);
            };
        }
    </script>

